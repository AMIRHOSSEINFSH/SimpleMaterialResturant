<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="کیفیت پایین"
                    android:textColor="@color/txt_color_music"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="64 kb"
                    android:textColor="@color/txt_color_music"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="24dp"
                    app:tint="#00C808"
                    app:srcCompat="@drawable/ic_baseline_get_app_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="کیفیت متوسط"
                    android:textColor="@color/txt_color_music"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="128 kb"
                    android:textColor="@color/txt_color_music"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="24dp"
                    app:tint="#00C808"
                    app:srcCompat="@drawable/ic_baseline_get_app_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/background_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="کیفیت بالا"
                    android:textColor="@color/txt_color_music"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="320 kb"
                    android:textColor="@color/txt_color_music"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="24dp"
                    app:tint="#00C808"
                    app:srcCompat="@drawable/ic_baseline_get_app_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>