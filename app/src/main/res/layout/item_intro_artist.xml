<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_marginLeft="16dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/background_music"
    android:layoutDirection="rtl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="145dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.flaviofaria.kenburnsview.KenBurnsView
            android:scaleType="centerCrop"
            android:id="@+id/kenView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:background="@drawable/bg_intro_artist"
            android:alpha="1"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/txt_color_music"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text="محسن چاوشی - بی تو"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_count"
                android:layout_marginVertical="2dp"
                android:text="تعداد قطعه ها -8"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/txt_color_music"
                android:layout_below="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_fav"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/img"
                android:textColor="@color/txt_color_music"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="(25.9)K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img"
                android:layout_alignParentLeft="true"
                app:tint="@android:color/holo_red_light"
                app:srcCompat="@drawable/ic_baseline_favorite_24"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>